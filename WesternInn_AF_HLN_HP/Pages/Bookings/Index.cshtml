@page
@model WesternInn_AF_HLN_HP.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Booking[0].TheGuest.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Booking[0].TheGuest.GivenName)
                </th>
                <th>
                    <a asp-page="Index" asp-route-sortorder="@ViewData["NextCheckInOrder"]">
                        @Html.DisplayNameFor(model => model.Booking[0].CheckIn)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Booking[0].CheckOut)
                </th>
                <th>
                    <a asp-page="Index" asp-route-sortorder="@ViewData["NextCostOrder"]">
                        @Html.DisplayNameFor(model => model.Booking[0].Cost)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Booking[0].TheRoom)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Booking)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TheGuest.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TheGuest.GivenName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CheckIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CheckOut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TheRoom.Level)
                    </td>
                @if ( User.IsInRole("Administrator")){
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                }
                </tr>
            }
        </tbody>
    </table>
   

